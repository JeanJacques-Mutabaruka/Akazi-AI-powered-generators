{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://akazi.io/schemas/cv_akazi.json",
  "title": "AKAZI CV Schema",
  "description": "Schema for AKAZI CV format based on transformation prompt V3",
  "type": "object",
  "required": ["personal_info", "professional_summary", "experiences"],
  "properties": {
    "personal_info": {
      "type": "object",
      "description": "Candidate personal information",
      "required": ["full_name"],
      "properties": {
        "full_name": {
          "type": "string",
          "description": "Full name of the candidate",
          "minLength": 2,
          "examples": ["Jean Baptiste Munyurangabo"]
        },
        "title": {
          "type": "string",
          "description": "Professional title",
          "examples": ["Senior Data Analyst", "Full-Stack Developer"]
        },
        "contact": {
          "type": "object",
          "properties": {
            "email": {
              "type": "string",
              "format": "email"
            },
            "phone": {
              "type": "string"
            },
            "location": {
              "type": "string",
              "examples": ["Kigali, Rwanda"]
            },
            "linkedin": {
              "type": "string",
              "format": "uri"
            }
          }
        }
      }
    },
    "professional_summary": {
      "type": "string",
      "description": "Brief professional summary (2-3 sentences)",
      "minLength": 50,
      "maxLength": 500
    },
    "languages": {
      "type": "array",
      "description": "List of languages with proficiency levels",
      "items": {
        "type": "object",
        "required": ["language", "level"],
        "properties": {
          "language": {
            "type": "string",
            "examples": ["English", "French", "Kinyarwanda"]
          },
          "level": {
            "type": "string",
            "examples": ["Native", "Fluent", "Professional", "Conversational", "Basic"]
          }
        }
      }
    },
    "education": {
      "type": "array",
      "description": "Educational background",
      "items": {
        "type": "object",
        "required": ["degree", "year"],
        "properties": {
          "degree": {
            "type": "string",
            "description": "Degree or certification name",
            "examples": ["Bachelor in Computer Science", "MBA"]
          },
          "institution": {
            "type": "string",
            "description": "University or institution name",
            "examples": ["University of Rwanda", "INSEAD"]
          },
          "year": {
            "type": "integer",
            "description": "Year of graduation",
            "minimum": 1950,
            "maximum": 2050
          },
          "location": {
            "type": "string",
            "examples": ["Kigali, Rwanda"]
          }
        }
      }
    },
    "skills": {
      "type": "object",
      "description": "Technical and professional skills",
      "properties": {
        "technical": {
          "type": "array",
          "description": "Technical skills (tools, technologies)",
          "items": {
            "type": "string"
          },
          "examples": [["Python", "Django", "PostgreSQL", "Docker"]]
        },
        "professional": {
          "type": "array",
          "description": "Professional/soft skills",
          "items": {
            "type": "string"
          },
          "examples": [["Project Management", "Agile Methodologies", "Team Leadership"]]
        },
        "certifications": {
          "type": "array",
          "description": "Professional certifications",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string",
                "examples": ["AWS Certified Solutions Architect"]
              },
              "issuer": {
                "type": "string",
                "examples": ["Amazon Web Services"]
              },
              "year": {
                "type": "integer"
              }
            }
          }
        }
      }
    },
    "experiences": {
      "type": "array",
      "description": "Professional experience (reverse chronological order)",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["company", "position", "start_date"],
        "properties": {
          "company": {
            "type": "string",
            "description": "Company name",
            "examples": ["Andela", "Bridge2Rwanda", "AIMS Rwanda"]
          },
          "position": {
            "type": "string",
            "description": "Job title",
            "examples": ["Senior Developer", "Data Analyst"]
          },
          "location": {
            "type": "string",
            "examples": ["Kigali, Rwanda", "Remote"]
          },
          "start_date": {
            "type": "string",
            "description": "Start date (YYYY-MM format)",
            "pattern": "^\\d{4}-\\d{2}$",
            "examples": ["2020-03", "2018-11"]
          },
          "end_date": {
            "type": ["string", "null"],
            "description": "End date (YYYY-MM format) or null if current",
            "pattern": "^\\d{4}-\\d{2}$",
            "examples": ["2023-06", null]
          },
          "duration_months": {
            "type": "integer",
            "description": "Duration in months (auto-calculated if not provided)",
            "minimum": 1
          },
          "description": {
            "type": "string",
            "description": "Brief context of the role"
          },
          "responsibilities": {
            "type": "array",
            "description": "List of key responsibilities",
            "items": {
              "type": "string"
            }
          },
          "achievements": {
            "type": "array",
            "description": "Key achievements or notable projects",
            "items": {
              "type": "string"
            }
          },
          "technologies": {
            "type": "array",
            "description": "Technologies/tools used",
            "items": {
              "type": "string"
            }
          },
          "inferred_info": {
            "type": "array",
            "description": "Information deduced (displayed in ORANGE)",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "projects": {
      "type": "array",
      "description": "Notable projects (optional)",
      "items": {
        "type": "object",
        "required": ["title"],
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "technologies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "url": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "string",
          "default": "1.0"
        }
      }
    }
  },
  "additionalProperties": false
}
